{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "importHelpers": true,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "*": [
        "src/*",
        "types/*"
      ],
    },
  },
  "include": [
    "src",
    "public"
  ],
  "exclude": [
    "node_modules"
  ]
}
